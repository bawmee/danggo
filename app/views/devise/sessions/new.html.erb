<style>
  .btn{background-color:white;}
</style>

<div class="container">
<center> <img src="/123.png" width="600" height="auto">  </center>
<center>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,placeholder: "이메일", :style=>"border:1px lightgray solid;width:300px;height:50px"%><br>
    <%= f.password_field :password, autocomplete: "off" ,placeholder: "비밀번호", :style=>"border:1px lightgray solid;width:300px;height:50px"%>
  </div>
  <br>
  
  <% if devise_mapping.rememberable? -%>
    
      <%= f.check_box :remember_me %>
      <%= f.label "아이디저장" %>
    
  <% end -%>
  &nbsp;&nbsp;&nbsp;&nbsp;
  <%= render "devise/shared/links" %>

  <br>
  <div class="actions">
    <button class="btn" id="btn" type="submit"><img class="btn-img" src="/lognin.png" width="350px" height="auto"></button>
  </div>
  
<% end %>


</center>
</div>

