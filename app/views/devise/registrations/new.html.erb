<style>
  .btn{background-color:white;}
</style>

    
    <div class="container" >
    
    
        <center><img src="/123.png" width="600" height="auto"></center><br><br>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  
  <table align="center" >
      <tr>
        <th>이메일</th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" ,:style=>"border:1px lightgray solid;width:300px;height:50px"%></td>
      </tr>
      
      <tr>
        <th>이름</th>
        <td><%= f.text_field :name,:style=>"border:1px lightgray solid;width:300px;height:50px"%></td>
      </tr>
      
      <tr>
        <th>비밀번호</th>
        <td><% if @minimum_password_length %>
    <em>( <span class="glyphicon">&#xe101;</span> <%= @minimum_password_length %>&nbsp;글자 이상 )</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" ,:style=>"border:1px lightgray solid;width:300px;height:50px"%></td>
      </tr>
      
      <tr>
        <th>비밀번호 확인</th>
        <td><%= f.password_field :password_confirmation, autocomplete: "off" ,:style=>"border:1px lightgray solid;width:300px;height:50px"%></td>
      </tr>
      
    </table>  
<br>
  <div class="actions" align="center">
    <button class="btn" id="btn" type="submit"><img class="btn-img" src="/su.png" width="300px" height="auto"></button>
  </div>
<% end %>




    </div>
    



